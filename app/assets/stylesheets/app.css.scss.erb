@mixin clean 
{
	margin: 0px;
	padding: 0px;
}
@function shadows($color,$lim:6){
	$cadena: "";
	@for $i from 1 through $lim{
		$str : $i+"px 1px 1px "+(darken($color,percentage($i*4/100)));
		@if $i == $lim
		{
			$cadena: $cadena + $str;
		}
		@else
		{
			$cadena: $cadena + $str + ",";	
		}
	}
	@return unquote($cadena);
}
body
{
	margin: 0px;
	background: url(<%= asset_path('back.png') %>), repeat;
	font-family: 'Open Sans', sans-serif;
	color:#000;
}
