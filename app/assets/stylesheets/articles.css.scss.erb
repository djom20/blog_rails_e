@function shadows($color,$lim:6){
	$cadena: "";
	@for $i from 1 through $lim{
		$str : $i+"px 1px 1px "+(darken($color,percentage($i*4/100)));
		@if $i == $lim
		{
			$cadena: $cadena + $str;
		}
		@else
		{
			$cadena: $cadena + $str + ",";	
		}
	}
	@return unquote($cadena);
}

$i : #4eb3d1;

.page-header h1
{
	font-family: 'Open Sans', sans-serif;
	font-size: 50px;
	color: $i;
	text-shadow:shadows($i,6),14px 1px 7px rgba(0,0,0,0.8);
	border-bottom: solid 1px #CCC;
}
.article{
	border-bottom:solid 1px #CCC;
	padding:5px 0px;
	margin-top: 10px;
	width: 40%;
	display: inline-block;
	vertical-align: middle;
	-webkit-transition: all 0.4s;
	-moz-transition: all .4s;
	-o-transition: all .4s;
	&:nth-child(even)
	{
		margin-left: 10%;
	}
	.admin
	{
		opacity: 0.0;
		-webkit-transition: all 0.4s;
		-moz-transition: all 0.4s;
		-o-transition: all 0.4s;
	}
	.img-article
	{
		position: relative;
		z-index: -2;
		top: -150px;
		opacity: 0.1;
		-webkit-transition: all 2s;
		-moz-transition: all 2s;
		-o-transition: all 2s;
	}
	&:hover
	{
		background: inherit;
		text-shadow:2px 2px 5px #000;
		.admin
		{
			font-weight: bolder;
			opacity: 1;
			a
			{
				padding: 2px;
				border-radius: 5px;
				background-color: rgba(0,0,0,0.6);	
			}
			
		}
		.img-article
		{
			opacity: 0.4;
		}
	}

}
