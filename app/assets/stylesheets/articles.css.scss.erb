@function shadows($color,$lim:6){
	$cadena: "";
	@for $i from 1 through $lim{
		$str : $i+"px 1px 3px "+(darken($color,percentage($i*4/100)));
		@if $i == $lim
		{
			$cadena: $cadena + $str;
		}
		@else
		{
			$cadena: $cadena + $str + ",";	
		}
	}
	@return unquote($cadena);
}
$i : #4eb3d1;
.navbar,.navbar-inner,.navbar-inner .container
{
	border-radius: 0px;
}
.page-header h1
{
	font-family: 'Open Sans', sans-serif;
	font-size: 50px;
	color: $i;
	text-shadow:shadows($i,6),14px 1px 7px rgba(0,0,0,0.5);
}
.article{
	border-bottom:solid 1px #CCC;
	padding:5px 0px;
	margin-top: 10px;
	width: 40%;
	display: inline-block;
	vertical-align: middle;
	-webkit-transition: all 0.4s;
	-moz-transition: all 0.4s;
	-o-transition: all 0.4s;
}
.article:nth-child(even)
{
	margin-left: 10%;
}
.article .admin
{
	opacity: 0.0;
	-webkit-transition: all 0.4s;
	-moz-transition: all 0.4s;
	-o-transition: all 0.4s;
}
.article:hover
{
	background-color: rgb(240,240,240);
}
.article:hover .admin
{
	opacity: 1;
}
.img-article
{
	max-width: 50%;
	max-height: 400px;
}
.post
{
	text-align:center;
}
#article_body
{
	width:100%;
}