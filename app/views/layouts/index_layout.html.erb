<!DOCTYPE html>
<html>
<head>
  <title>Ecoding</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>
	<section id='body'>
		<div class='sidebar'>
			<%= image_tag "e-coding.png", class: 'logo' %>
			<nav class='navbar'>
				<div class='navbar-inner'>
					<div class='container'>
						<ul class='nav'>
							<li><%= link_to 'E-coding', root_path, class:'brand'%></li>
							<li><%= link_to 'Articles', articles_path %></li>
							<% if current_user %>
								<li><%= link_to 'Nuevo artÃ­culo', new_article_path%></li>
								<li><%= link_to "log out #{current_user.username}", logout_path %></li>
		                        <li><%= link_to 'Editar tu usuario', edit_user_path(current_user) %></li>
							<% else %>
								<li><%= link_to 'log in', login_path %></li>
							<% end %>
						</ul>
					</div>
				</div>
			</nav>
		</div>
		<div class='container' id='main'>
			<%= yield %>
		</div>
	</section>
</body>
</html>